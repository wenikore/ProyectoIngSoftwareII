<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="unidad_persistencia_general" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/crmDatasource</jta-data-source>
        <class/>
        <class>com.co.crm.entities.Rol</class>
        <class>com.co.crm.entities.Persona</class>
        <class>com.co.crm.entities.Contacto</class>
        <class>com.co.crm.entities.Usuario</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.ddl-generation" value="create-tables"/>-->
            <property name="eclipselink.logging.file" value="output.log"/>
            <property name="eclipselink.logging.logger" value="ServerLogger"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.level" value="ALL"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.logging.exceptions" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
